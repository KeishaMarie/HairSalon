@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model HairSalon.Models.Stylist

<h2>Stylist Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.StylistName): @Html.DisplayFor(model => model.StylistName)</h3>
<h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h3>
<h3>@Html.DisplayNameFor(model => model.Hours): @Html.DisplayFor(model => model.Hours)</h3>

<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Back to Stylist List", "Index")</p>

<ul>
  @foreach(Client client in Model.Clients)
  {
    <li>@Html.ActionLink($"{client.ClientName}", "Show", "Clients", new { id = client.ClientId })</li>
  }
</ul>
