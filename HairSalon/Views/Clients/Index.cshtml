@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

  <h1>Clients</h1>

  @if (@Model.Count == 0)
  {
    <h3>You do not have any clients yet.</h3>
  }

  <ul>
    @foreach(Client client in Model)
    {
      <li>@Html.ActionLink($"{client.ClientName}", "Show", new { id = client.ClientId }) - @client.Stylist.StylistName</li>
    }
  </ul>

  <p>@Html.ActionLink("Add a Client", "Create")</p>
  <p>@Html.ActionLink("See All Stylists", "Index", "Stylists")</p>